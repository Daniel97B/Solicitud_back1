<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>SOLICITUDES</title>
    <link rel="stylesheet" href="/resources/css/DISEÑO.CSS">
    <style>@import url('https://fonts.googleapis.com/css2?family=Sofadi+One&display=swap');</style>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    </head>
  <body class="roboto-light">

    <!--Campo de el formulario-->
    <form action="/auth" method="post" class="form">
      <h2 id="ltrblanca" class="form-title">Inicia Sesión</h2>
      <p></p>
      <!--Ponemos el contenedor de el formulario-->
      <div class="form-container">

        <!--Campo de user-->
        <div class="form-group">
          <input type="text" name="User" class="form-input" placeholder="" id="User">
          <label type="text" for="User" class="form-label">User</label>
          <span class="form-line"></span>
        </div>

        <!--Campo de Password-->
        <div class="form-group">
          <input type="password" name="Password" class="form-input" placeholder="" id="Password">
          <label for="Password"  class="form-label">Constraseña</label>
          <span class="form-line"></span>
        </div>

        <!--Boton de envio de datos-->
        <input type="submit" value="INGRESO" class="form-button">
      </div>
    </form>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>